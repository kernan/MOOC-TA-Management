<h1>Login</h1>

<%= form_tag(:action => 'authenticate') do %>
  <div class='field'>
    <%= text_field_tag :email, nil, :placeholder => 'Email' %>
  </div>
  <div class='field'>
    <%= password_field_tag :password, nil, :placeholder => 'Password' %>
  </div>
  <div class='action'>
    <%= submit_tag 'Log In' %>
    </div<
<% end %>
