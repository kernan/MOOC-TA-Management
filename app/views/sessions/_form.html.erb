<%= form_tag(:action => 'create') do %>
  <div class='field'>
    <%= email_field_tag :email, nil, :placeholder => 'Email' %>
  </div>
  <div class='field'>
    <%= password_field_tag :password, nil, :placeholder => 'Password' %>
  </div>
  <!-- <div class='field'> -->
    <!--   <%= check_box_tag :remember_me %> -->
    <!-- </div> -->
  <div class='actions'>
    <%= submit_tag 'Log In', :class => "green" %>
  </div>
<% end %>
<div class='actions'>
  <%= button_to 'Register', register_path, :method => :get %>
</div>
