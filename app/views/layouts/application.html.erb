<!DOCTYPE html>
<html>
  <head>
    <title>MoocTaManager</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="top">
      <h1>MOOC TA Manager</h1>
    </div>
    <div id="nav">
      <ul>
        <% if current_user %>
          <% if current_user.type == 'Professor' %>
            <li><%= link_to 'Courses', professor_courses_path(:professor_id => current_user.id) %></li>
          <% elsif current_user.type == "TeachingAssistant" %>
            <!-- TODO: TA pages -->
          <% end %>
          <li><%= link_to 'Logout', logout_path %></li>
        <% else %>
          <li><%= link_to 'Login', login_path %></li>
          <li><%= link_to 'Register', new_user_path %></li>
        <% end %>
        </li>
      </ul>
    </div>
    <div>
      <div id="container">
        <%= yield %>
      </div>
    </body>
  </html>
