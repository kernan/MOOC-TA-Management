<p id="notice"><%= notice %></p>
 
<p>
  <b>Name:</b>
  <%= @ta_test.name %>
</p>

<h2>Questions</h2>
<% @ta_test.questions.each do |question| %>
  <p>
    <b>Type:</b>
    <%= question.question_type %>
  </p>

  <p>
    <b>Question:</b>
    <%= question.question %>
  </p>
 
  <p>
    <b>Answer:</b>
    <%= question.answer %>
  </p>
<% end %>
 
<h2>Add a question:</h2>
<%= form_for([@ta_test, @ta_test.questions.build]) do |f| %>
  <div class="field">
    <%= f.radio_button :question_type, 'mult_choice', :checked => true %> 
    <%= label :question_type_mult_choice, 'Multiple Choice' %>
  </div>
  <div class="field">
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </div>
  <div class="field">
    <%= f.label :answer %><br />
    <%= f.text_area :answer %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<br /> 
<%= link_to 'Back', ta_tests_path %>
