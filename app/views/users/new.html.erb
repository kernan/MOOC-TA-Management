<h1>New user</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id='error_explaination'>
      <h2><%= pluralize(@user.errors.count, 'error') %> errors:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='field'>
    <%= f.text_field :email, :placeholder => "Email" %>
  </div>
  <div class='field'>
    <%= f.password_field :password, :placeholder => "Password" %><br/>
  </div>
  <div class='field'>
    <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %><br/>
  </div>
  <div class='actions'>
    <%= f.submit %>
  </div>
<% end %>

<div class='actions'>
  <%= button_to "Cancel", users_path, :id => "cancel_button", :method => :get %>
</div>
